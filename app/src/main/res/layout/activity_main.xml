<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/mainLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity"
>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
    >
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
        />
        <RelativeLayout
            android:id="@+id/recyclerViewBottom"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@android:color/white"
            android:visibility="gone"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
    >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="@drawable/white_gradient"
        />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@android:color/white"
        />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/moviesListGreyFilter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#60000000"
    />
    <LinearLayout
        android:id="@+id/searchMoviesEditTextWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/search_movies_edittext_background"
        android:orientation="vertical"
    >
        <LinearLayout
            android:id="@+id/paginationWrapper"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:orientation="horizontal"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="8dp"
            android:visibility="gone"
        >
            <RelativeLayout
                android:id="@+id/backBackButtonWrapper"
                android:layout_width="44dp"
                android:layout_height="match_parent"
                android:background="@drawable/pagination_disabled_button_background"
            >
                <Button
                    android:id="@+id/backBackButton"
                    android:layout_marginTop="11dp"
                    android:layout_marginStart="9dp"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:background="@drawable/ic_back_back_arrow"
                />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/backButtonWrapper"
                android:layout_width="44dp"
                android:layout_height="match_parent"
                android:layout_marginStart="7dp"
                android:background="@drawable/pagination_disabled_button_background"
            >
                <Button
                    android:id="@+id/backButton"
                    android:layout_marginTop="11dp"
                    android:layout_marginStart="10dp"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:background="@drawable/ic_back_arrow"
                />
            </RelativeLayout>
            <TextView
                android:id="@+id/pageTextView"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="1"
                android:textSize="18dp"
                android:textColor="@android:color/black"
                android:textAlignment="center"
                android:gravity="center"
            />
            <RelativeLayout
                android:id="@+id/nextButtonWrapper"
                android:layout_width="44dp"
                android:layout_height="match_parent"
                android:background="@drawable/pagination_button_background"
            >
                <Button
                    android:id="@+id/nextButton"
                    android:layout_marginTop="11dp"
                    android:layout_marginStart="13dp"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:background="@drawable/ic_next_arrow"
                />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/nextNextButtonWrapper"
                android:layout_width="44dp"
                android:layout_height="match_parent"
                android:layout_marginStart="7dp"
                android:background="@drawable/pagination_button_background"
            >
                <Button
                    android:id="@+id/nextNextButton"
                    android:layout_marginTop="11dp"
                    android:layout_marginStart="12dp"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:background="@drawable/ic_next_next_arrow"
                />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:orientation="horizontal"
        >
            <LinearLayout
                android:layout_width="51dp"
                android:layout_height="match_parent"
            >
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="17dp"
                    android:background="@drawable/ic_lupa"
                />
            </LinearLayout>
            <EditText
                android:id="@+id/searchMoviesEditText"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:inputType="text"
                tools:ignore="Autofill"
                android:hint="@string/search_movies_hint"
                android:background="@android:color/transparent"
            />
        </LinearLayout>
    </LinearLayout>
    <ProgressBar
        android:id="@+id/moviesProgressbar"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerInParent="true"
    />
    <TextView
        android:id="@+id/moviesListCenterText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/no_movies_founded"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:visibility="gone"
    />
</RelativeLayout>